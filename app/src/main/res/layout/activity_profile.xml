<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                app:srcCompat="@drawable/doctor" />
            <!--        app:srcCompat="@mipmap/foto_foreground" />-->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Nama Akun" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="example@email.com" />

            <Button
                android:id="@+id/editProfileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/blue"
                android:text="Edit Profile" />

            <!--        Preferences -->
            <TextView
                android:id="@+id/labelPre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/garisbwhAcc"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:text="Preferences"
                android:textSize="12sp" />

            <View
                android:id="@+id/garispre"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/labelPre"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/buttonpre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/garispre"
                android:layout_marginTop="3dp"
                android:backgroundTint="#00EEEEEE"
                android:drawableLeft="@drawable/brush"
                android:text="Theme"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:id="@+id/garisbwhpre"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/buttonpre"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <!--    Account-->
            <TextView
                android:id="@+id/accountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editProfileButton"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="0dp"
                android:text="Account"
                android:textSize="12sp" />

            <View
                android:id="@+id/garisAcc"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/editProfileButton"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/buttonCP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/garisAcc"
                android:layout_marginTop="3dp"
                android:backgroundTint="#00EEEEEE"
                android:drawableLeft="@drawable/lock"
                android:shadowColor="#8A8787"
                android:text="Change Password"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:id="@+id/garisbwhAcc"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/buttonCP"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <!--    More-->
            <TextView
                android:id="@+id/moreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/garisbwhpre"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="0dp"
                android:text="More"
                android:textSize="12sp" />

            <View
                android:id="@+id/garisMore"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/moreLabel"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-1dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/buttonFeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/garisMore"
                android:layout_marginTop="1dp"
                android:backgroundTint="#00EEEEEE"
                android:drawableLeft="@drawable/messages_3"
                android:shadowColor="#8A8787"
                android:text="Feedback"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:id="@+id/garisbwhFeed"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/buttonFeed"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />


            <Button
                android:id="@+id/buttonRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/garisbwhFeed"
                android:layout_marginTop="1dp"
                android:backgroundTint="#00EEEEEE"
                android:drawableLeft="@drawable/star"
                android:shadowColor="#8A8787"
                android:text="Rate"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:id="@+id/garisbwhRate"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/buttonRate"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/buttonSup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/garisbwhRate"
                android:layout_marginTop="1dp"
                android:backgroundTint="#00EEEEEE"
                android:drawableLeft="@drawable/support"
                android:shadowColor="#8A8787"
                android:text="Support"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:id="@+id/garisbwhSup"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/buttonSup"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/buttonFAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/garisbwhSup"
                android:layout_marginTop="1dp"
                android:backgroundTint="#00EEEEEE"
                android:drawableLeft="@drawable/message_question"
                android:shadowColor="#8A8787"
                android:text="FAQ"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:id="@+id/garisbwhFAQ"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/buttonFAQ"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/buttonPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/garisbwhFAQ"
                android:layout_marginTop="1dp"
                android:backgroundTint="#00EEEEEE"
                android:drawableLeft="@drawable/shield_tick"
                android:shadowColor="#8A8787"
                android:text="Privacy policy"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:id="@+id/garisbwhPrivacy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/buttonPrivacy"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/buttonTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/garisbwhPrivacy"
                android:layout_marginTop="1dp"
                android:backgroundTint="#00EEEEEE"
                android:drawableLeft="@drawable/clipboard_text"
                android:shadowColor="#8A8787"
                android:text="Terms of use"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:id="@+id/garisbwhTerms"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/buttonTerms"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/buttonAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/garisbwhTerms"
                android:layout_marginTop="1dp"
                android:backgroundTint="#00EEEEEE"
                android:drawableLeft="@drawable/info_circle"
                android:shadowColor="#8A8787"
                android:text="About Us"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:id="@+id/garisbwhAbout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/buttonAbout"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/garisbwhAbout"
                android:layout_marginTop="1dp"
                android:backgroundTint="#00EEEEEE"
                android:drawableLeft="@drawable/logout"
                android:drawableTint="#F60101"
                android:shadowColor="#8A8787"
                android:text="Logout"
                android:textAlignment="textStart"
                android:textColor="#ED1505"
                android:textSize="15sp" />

            <View
                android:id="@+id/garisbwhLogout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/buttonLogout"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray" />


        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
