<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:text="Tambah Obat"
            android:textSize="34sp"
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/tvNamaObat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etJam"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Nama Obat"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etObat"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:ems="10"
            android:hint="isikan nama obat"
            android:inputType="text" />

        <TextView
            android:id="@+id/tvJam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Atur Waktu"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etJam"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvJam"
                android:layout_marginStart="20dp"
                android:layout_toStartOf="@+id/btnJam"
                android:hint="Isikan Waktu" />

            <ImageButton
                android:id="@+id/btnJam"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tvJam"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/jam" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etJam"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Atur Tanggal"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etTanggal"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTanggal"
                android:layout_marginStart="20dp"
                android:layout_toStartOf="@+id/btnTanggal"
                android:hint="Isikan Tanggal" />

            <ImageButton
                android:id="@+id/btnTanggal"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tvTanggal"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/kalender" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="225dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#00A9FF"
        android:text="Selesai"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>